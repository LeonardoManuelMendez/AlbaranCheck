{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Copy Resources",
            "type": "shell",
            "command": "cp",
            "args": [
                "-r",
                "src/ficheros/*",
                "bin/ficheros/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean and Build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "rm -rf bin/* && mkdir -p bin/ficheros && /usr/lib/jvm/java-21-openjdk-amd64/bin/javac -cp 'src/lib/*:.' -d bin src/modelo/*.java src/controlador/*.java src/vista/*.java src/main/*.java && cp -r src/ficheros/* bin/ficheros/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
